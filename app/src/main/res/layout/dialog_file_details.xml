<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_details_dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/white"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dialog_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_language" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/sora"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/dialog_desc"
                app:layout_constraintEnd_toStartOf="@+id/btn_collection"
                app:layout_constraintStart_toEndOf="@+id/dialog_image"
                app:layout_constraintTop_toTopOf="@+id/dialog_image"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@string/app_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/syne"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textColor="#666666"
                app:layout_constraintBottom_toBottomOf="@+id/dialog_image"
                app:layout_constraintEnd_toStartOf="@+id/btn_collection"
                app:layout_constraintStart_toEndOf="@+id/dialog_image"
                app:layout_constraintTop_toBottomOf="@+id/dialog_name"
                tools:text="@string/app_name" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_collection"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_item_collection" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_rename"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/item_settings_bg"
        android:drawablePadding="12dp"
        android:fontFamily="@font/syne"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="12dp"
        android:text="@string/rename"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_dialog_rename"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/item_settings_bg"
        android:drawablePadding="12dp"
        android:fontFamily="@font/syne"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="12dp"
        android:text="@string/share"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_dialog_share"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_print"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/item_settings_bg"
        android:drawablePadding="12dp"
        android:fontFamily="@font/syne"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="12dp"
        android:text="@string/print"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_dialog_print"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_open"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/item_settings_bg"
        android:drawablePadding="12dp"
        android:fontFamily="@font/syne"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="12dp"
        android:text="@string/open"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_dialog_open"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/item_settings_bg"
        android:drawablePadding="12dp"
        android:fontFamily="@font/syne"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="12dp"
        android:text="@string/delete"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_dialog_delete"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:ignore="RtlSymmetry" />

</androidx.appcompat.widget.LinearLayoutCompat>