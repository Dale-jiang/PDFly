<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PDFly" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TabStyle" parent="@style/Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/layer_tab_item</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">#999999</item>
        <item name="tabTextAppearance">@style/TabItemAppearance</item>
        <item name="tabBackground">@drawable/tab_item_background</item>
    </style>

    <style name="TabItemAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>